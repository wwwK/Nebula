<UserControl x:Class="Nebula.UI.Controls.PathSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Nebula.UI.Controls"
             xmlns:resx="clr-namespace:Nebula.Resources"
             x:Name="Control"
             mc:Ignorable="d">
    <local:SimpleGrid Columns="*,Auto">
        <TextBox x:Name="TextContent" Grid.Column="0" HorizontalAlignment="Stretch" />
        <Button Content="{x:Static resx:nebula.FromFile}" Grid.Column="1" VerticalAlignment="Bottom" Click="OnClick" />
    </local:SimpleGrid>
</UserControl>