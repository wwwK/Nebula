<ui:Page x:Class="Nebula.Pages.Settings.AppearancePage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns:resx="clr-namespace:Nebula.Resources"
         xmlns:local="clr-namespace:Nebula.Pages.Settings"
         mc:Ignorable="d">
    <ui:SimpleStackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Spacing="15">
        <TextBlock />
        <ComboBox x:Name="DisplayModeCmb" Width="150" ui:ControlHelper.Header="{x:Static resx:nebula.SettingsViewMode}"
                  SelectedValue="{Binding DisplayMode, Mode=TwoWay}" />
    </ui:SimpleStackPanel>
</ui:Page>